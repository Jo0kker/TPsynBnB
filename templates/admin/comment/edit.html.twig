{% extends 'admin/base.html.twig' %}

{% block title %}Edition commentaire{% endblock %}
{% block body %}
<div class="container">
    <h4>Edition commentaire n° {{ comment.id }}</h4>
    <hr>
    <div class="card card-body bg-info text-light">
        <p><strong>Annonce liée</strong> : {{ comment.ad.title }}</p>
        <p><strong>Auteur : </strong>{{ comment.author.fullName }}</p>
        <p><strong>Date de création : </strong>{{ comment.createdAt|date('d/m/Y H:i') }}</p>
        <p><strong>Note donnée : </strong>{{ comment.rating }}</p>
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Changer le commentaire</button>
    {{ form_end(form) }}
</div>
{% endblock %}

