{% extends 'admin/base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h4 class="my-5 h2">Liste des réservations</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for booking in pagination.data %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td>{{ booking.createdAt|date('d/m/Y H:i') }}</td>
                        <td><img src="{{ booking.booker.picture }}" alt="Avatar" class="avatar avatar-micro"> {{ booking.booker.fullName }}</td>
                        <td>{{ booking.ad.title }}</td>
                        <td>{{ booking.amount }} &euro;</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('admin_booking_edit', {'id':booking.id}) }}"><i class="fas fa-pen"></i></a>
                            <a class="btn btn-danger" href="{{ path('admin_booking_delete', {'id':booking.id}) }}"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
