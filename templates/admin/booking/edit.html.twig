{% extends 'admin/base.html.twig' %}
{% block title %}Edition réservation{% endblock %}
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Modifier la réservation n°{{ booking.id }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
            </div>
            <div class="col">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
                <button class="btn btn-primary" type="submit"><i class="fas fa-save"></i> Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}